{
  "name": "@teamwork/tw-chat",
  "version": "0.0.1",
  "main": "src/index.js",
  "dependencies": {
    "babel-cli": "^6.23.0",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2016": "^6.22.0",
    "babel-preset-es2017": "^6.22.0",
    "bluebird": "^3.4.7",
    "colors": "^1.1.2",
    "debug": "^2.6.0",
    "fetch": "^1.1.0",
    "forever": "^0.15.3",
    "invariant": "^2.2.2",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "node-fetch": "^1.6.3",
    "qs": "^6.3.1",
    "rc": "^1.1.6",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "babel-loader": "^6.3.0",
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.22.0",
    "mocha": "^3.2.0",
    "sinon": "^2.0.0-pre.4",
    "webpack": "2"
  },
  "scripts": {
    "clean": "rm -r build",
    "build:src": "babel -d build/src src",
    "build:bin:lib": "babel -d build/bin/lib bin/lib",
    "build:bin:tw-chat": "babel -d build bin/tw-chat*",
    "build:bin:rename": "rename -d '.js' build/bin/*",
    "build:bin:fix-binary": "replace '#!/usr/bin/env babel-node --' '#!/usr/bin/env node' build/bin -r",
    "build:bin:chmod": "chmod +x build/bin/*",
    "build:bin:copy-json": "cp *.json build/",
    "build:bin": "yarn run build:bin:lib && yarn run build:bin:tw-chat && yarn run build:bin:rename && yarn run build:bin:fix-binary && yarn run build:bin:chmod && yarn run build:bin:copy-json",
    "build": "yarn run clean && yarn run build:src && yarn run build:bin",
    "browser:build": "webpack -p",
    "browser:test:build": "webpack --output-pathinfo --config test/browser/webpack.test.config.js",
    "browser:test": "yarn run browser:test:build && open ./test/browser/index.html",
    "test": "mocha --compilers js:babel-register --require babel-polyfill"
  },
  "babel": {
    "presets": [
      "es2015",
      "es2016",
      "es2017",
      "stage-0"
    ],
    "plugins": [
      "transform-async-to-generator",
      "transform-flow-strip-types",
      [
        "transform-builtin-extend",
        {
          "globals": [
            "Error"
          ]
        }
      ]
    ]
  }
}
